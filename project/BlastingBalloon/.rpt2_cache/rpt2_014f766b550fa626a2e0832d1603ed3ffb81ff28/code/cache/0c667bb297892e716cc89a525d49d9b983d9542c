hild(this.tipContainer);\r\n        }\r\n        else {\r\n            var step = this.guideSteps[this.guideStep++];\r\n            this.tipContainer.graphics.clear();\r\n            this.tipContainer.loadImage(step.tip);\r\n            this.tipContainer.pos(step.tipx, step.tipy);\r\n        }\r\n    }\r\n    onDisable() {\r\n    }\r\n}\r\n",
